# Production Environment Configuration
# LXthon 2025 - Team Prometheus

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8001
BACKEND_DEBUG=false
BACKEND_LOG_LEVEL=WARNING

# Model Configuration
MODEL_PATH=./data/models/unet_eye_segmentation.keras
MODEL_INPUT_SIZE=256

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com/api
FRONTEND_PORT=3001

# Security
SECRET_KEY=${SECRET_KEY}  # Set this in production
CORS_ORIGINS=["https://your-domain.com"]

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=json

# Performance
ASYNC_WORKERS=8
MAX_REQUEST_SIZE=50MB

# Production Features
HOT_RELOAD=false
DEBUG_MODE=false
PROFILE_REQUESTS=false

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30
